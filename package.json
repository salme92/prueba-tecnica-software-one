{
  "name": "user-dashboard",
  "version": "1.0.0",
  "description": "Prueba técnica Software One - Angular PWA User Dashboard",
  "author": "Alberto Salmerón",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "pwa": "npm run build:prod && npx http-server ./dist/user-dashboard -p 8080 --spa",
    "serve:dist": "npx http-server ./dist/user-dashboard -p 8080 --spa",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --code-coverage",
    "lint": "ng lint",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "analyze": "ng build --stats-json && npx source-map-explorer dist/user-dashboard/*.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/cdk": "^20.2.12",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.12",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/service-worker": "^20.3.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.10.0",
    "angular-eslint": "20.5.1",
    "eslint": "^9.9.1",
    "jasmine-core": "~5.1.1",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.3.3",
    "source-map-explorer": "^2.5.3",
    "typescript": "~5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "Angular",
    "PWA",
    "Dashboard",
    "Software One",
    "Prueba técnica",
    "SPA",
    "Material Design"
  ]
}